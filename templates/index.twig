{% extends "_layout" %}

{% set start = 'current' %}
{% set aktuelles, projekte, opensource, mods = '','','','' %}


{% block aktuelles %}

    {% for entry in craft.entries.section('aktuelles').limit(1).all() %}
    <div class="artikel_1">
    {% for block in entry.artikel.all() %}
    
    {% switch block.type %}
    
        {% case "bilder" %}
			{% for image in block.artikelThumbnail.all() %}
            <img src="{{ image.getUrl() }}" width="330px" height="{{ image.getHeight() }}" alt="{{ image.title }}">
            {% endfor %}

        {% case "artikelTitel" %}
        <a href="aktuellesOverview">
        <h2>{{ entry.section }}</h2>
        </a>

        <a href="{{ entry.url }}">
			<h1>{{ block.titel }}</h1> {# Type: Reiner Text #}
        </a>

		{% case "artikelTeaser" %}
			<h3>{{ block.teaser }}</h3> {# Type: Reiner Text #}

		{% case "artikelBody" %}
			<p>{{ block.body|chop(limit=1, unit='p') }} {# Type: CKEditor #}
            <a class="button" href="{{ entry.url }}">weiterlesen</a>
            </p>

        

		{% default %}
			...

    {% endswitch %}

{% endfor %}
</div>
{% endfor %}

    {% endblock aktuelles %}


{% block projekte %}
    
{% for entry in craft.entries.section('projekte').limit(1).all() %}

<div class="artikel_1">
