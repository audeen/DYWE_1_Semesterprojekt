{% extends "_layout" %}
{% block aktuelles %}
    


<div class="artikel_1">

    <a href="{{ siteUrl }}aktuellesOverview">
    <h2> {{ entry.section }}</h2>
</a>

<a href="{{ entry.url }}">

    <h1>
        {{ entry.title }}
    </h1>

</a>

<h3>
    {{ entry.artikelTeaser }}
</h3>


    {{ entry.artikelBody }}

{# Create an asset query with the 'volume' and 'kind' parameters #}
{% set myAssetQuery = craft.assets()
    .volume('images')
    .kind('image') %}

{# Fetch the assets #}
{% set images = myAssetQuery.all() %}

{# Display the thumbnail list #}
<ul>
    {% for image in images %}
        <li><img src="{{ image.getUrl }}" alt="{{ image.title }}"></li>
    {% endfor %}
</ul>


{#     {% set myAsset = entry.artikelImage.one()%}
    {% if myAsset %}    
    <img src="{{ myAsset.url }}" alt="{{ myAsset.title }}"/>
    {% endif %}  #}
  

<p class="post-meta">Posted by
    <a href="#">{{ entry.author }}</a>
    on {{ entry.postDate | date('d M, Y')}}
</p>
</div>
<br>




{% endblock aktuelles %}
