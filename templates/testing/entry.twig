{% extends "_layout" %}

{% set start, projekte, opensource, aktuelles, mods, about = '','','','','','' %}

{% set segment = craft.app.request.getSegment(1) %}
{% switch segment %}
    {% case "aktuellesOverview" %}
        {% set aktuelles = 'current' %}
		{% set page_title = 'Aktuelles' %}
		{% set sectionart = craft.entries.section('aktuelles').all() %}
    {% case "projekteOverview" %}
        {% set projekte = 'current' %}
		{% set page_title = 'Projekte' %}
		{% set sectionart = craft.entries.section('projekte').all() %}
    {% case "opensourceOverview" %}
        {% set opensource = 'current' %}
		{% set page_title = 'Open-Source' %}
		{% set sectionart = craft.entries.section('opensource').all() %}
    {% case "modsOverview" %}
        {% set mods = 'current' %}
		{% set page_title = 'Mods' %}
		{% set sectionart = craft.entries.section('mods').all() %}
{% endswitch %}

{% block content %}
    <div class="artikel_3">
        {% if entry.artikel %}
            <div class="headline">{{ entry.title }}</div> 
        {% endif %}
        {% for block in entry.artikel.all() %}
            {% switch block.type %}
                {% case "artikelTeaser" %}
                    <div class="teaser">{{ block.teaser }}</div>
                {% case "artikelBody" %}
                    <div class="abody">{{ block.body }}</div> 
                {% case "bilder" %}
                    {% for image in block.bildSmall.all() %}
                        <figure class="bildSmall">
                            <img src="{{ image.getUrl() }}">
                        </figure>
                    {% endfor %}
                    {% for image in block.bildMedium.all() %}
                        <figure class="bildMedium">
                            <img src="{{ image.getUrl() }}">
                        </figure>
                    {% endfor %}
                    {% for image in block.bildLarge.all() %}
                        <figure class="bildLarge">
                            <img src="{{ image.getUrl() }}">
                        </figure>
                    {% endfor %}
                    {% for image in block.zweiBilder.all() %}
                        <figure class="zweiBilder">
                            <img src="{{ image.getUrl() }}">
                        </figure>
                    {% endfor %}
                    {% for image in block.dreiBilder.all() %}
                        <figure class="dreiBilder">
                            <img src="{{ image.getUrl() }}">
                        </figure>
                    {% endfor %}
                    {% for image in block.bildergalerie.all() %}
                        <figure class="bildergalerie">
                            <img src="{{ image.getUrl() }}">
                        </figure>
                    {% endfor %} 
                    <figcaption>{{ block.bu }}</figcaption>
                {% endswitch %}
                {% if block.type == "video" %}
                    {% set asset = block.video.one() %}
                    {% set embed = craft.embeddedAssets.get(asset) %}
                        {% if embed %}
                            <div id="video-box" class="videobox">
                                {{ embed ? embed.html }}
                            </div>
                        {% endif %}
                {% endif %}
                {% if block.type == "audio" %}
                    {% set asset = block.audio.one() %}
                    {% set embed = craft.embeddedAssets.get(asset) %}
                        {% if embed %}
                            <div class="audio">
                                {{ embed ? embed.html }}
                            </div>
                        {% endif %}
                    {% endif %}
                {% if block.type == "posts" %}
                    {% set asset = block.posts.one() %}
                    {% set embed = craft.embeddedAssets.get(asset) %}
                        {% if embed %}
                            <div class="posts">
                                {{ embed ? embed.html }}
                            </div>
                        {% endif %}
                {% endif %}
        {% endfor %}
    </div>
{% endblock  %}


