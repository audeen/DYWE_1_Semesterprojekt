{% extends "_layout" %}

{% set page_title = 'Aktuelles' %}
{% set aktuelles = 'current' %}
{% set start, projekte, opensource, mods = '','','','' %}


{% block aktuelles %}
    
{% for block in entry.artikel.all() %}
{% switch block.type %}

    {% case "titel" %}
        {{ block.titel }} {# Type: Reiner Text #}

    {% case "teaser" %}
        {{ block.teaser }} {# Type: Reiner Text #}

    {% case "body" %}
        {{ block.body }} {# Type: CKEditor #}

    {% case "bilder" %}
        {{ block.bild.one.url }} {# Type: Dateien #}
        {{ block.bildExtern }} {# Type: URL #}
        {{ block.artikelThumbnail }} {# Type: Dateien #}

    {% case "videos" %}
        {{ block.youtubeEmbed }} {# Type: URL #}

    {% default %}
        ...

{% endswitch %}
{% endfor %}
<br>
{% endblock aktuelles %}

