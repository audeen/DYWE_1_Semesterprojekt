{% block aktuelles %}
    
{% for entry in craft.entries.section('aktuelles').limit(10).all() %}

<div class="artikel_1">
    <a href="{{ entry.uri }}">
        <h1>{{ entry.title }}</h1>
    </a>
    <h3>{{ entry.artikelTeaser }}</h3>
    {{ entry.artikelBody }}
</div>

{% endfor %}
<br>
{% endblock aktuelles %}

