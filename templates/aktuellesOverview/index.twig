{% extends "_layout" %}

            <header>
                <div class="logo">
                    <img src="{{ siteUrl }}assets/imgs/FPB%20Header.png" alt="Forschungsgruppe Perfect Beat">
                </div>
                <div>
                    <ul class="nav">
                        <li><div class="navlink"><a href="{{ siteUrl }}">Start</a></div></li>
                        <li><div class="navlink"><a href="{{ siteUrl }}aktuellesOverview">Aktuelles</a></div></li>
