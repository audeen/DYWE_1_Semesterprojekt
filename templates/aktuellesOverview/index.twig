{% extends "_layout" %}

{% set page_title = 'Aktuelles' %}
{% set aktuelles = 'current' %}
{% set start, projekte, opensource, mods = '','','','' %}


{% block aktuelles %}

{% for entry in craft.entries.section('aktuelles').all() %}
<div class="artikel_1">
{% for block in entry.artikel.all() %}

{% switch block.type %}

	{% case "artikelPreview" %}

	{% for image in block.artikelThumbnail.all() %}
		<figure class="artikelThumbnail">
			<img src="{{ image.getUrl('smallThumb') }}">
		</figure>
	{% endfor %}	

	<div class="artikelPreview">
			<a href='aktuellesOverview'>
				<h2>{{ entry.section }}</h2>
			</a>
			<a href="{{ entry.url }}">
				<h1>{{ block.previewtitel }}</h1>
			</a>
			<h3>{{ block.previewteaser }}</h3>
			<p>{{ block.previewbody|chop(limit=1, unit='p') }}
	</div>

{% endswitch %}	

{% endfor %}
<a class="button" href="{{ entry.url }}">weiterlesen</a>
</div>
{% endfor %}


{% endblock aktuelles %}



